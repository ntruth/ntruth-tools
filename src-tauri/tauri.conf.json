{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "OmniBox",
  "version": "0.1.0",
  "identifier": "com.ntruth.omnibox",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "OmniBox",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true
      },
      {
        "label": "clipboard",
        "title": "Clipboard History",
        "url": "/clipboard",
        "width": 400,
        "height": 500,
        "center": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      },
      {
        "label": "ai",
        "title": "AI Chat",
        "url": "/ai",
        "width": 600,
        "height": 700,
        "center": true,
        "resizable": true,
        "visible": false,
        "decorations": true,
        "minWidth": 400,
        "minHeight": 500
      },
      {
        "label": "settings",
        "title": "OmniBox Settings",
        "url": "/settings",
        "width": 900,
        "height": 600,
        "center": true,
        "resizable": true,
        "visible": false,
        "decorations": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
